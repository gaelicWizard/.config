[core]
	pager = less -FRSX
	whitespace=fix,tabwidth=4,indent-with-non-tab,trailing-space #,cr-at-eol
	#excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = true
	ignoreCase = true

[alias]
	remotes = remote -v

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"

[diff]
#	renamelimit = 0
	renames = copy

[merge]
	directoryRenames = true
	renormalize = true

[apply]
	whitespace = fix

[branch]
	autosetuprebase = always

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = simple

[branch]
	autosetuprebase = always

[remote "origin"]
#	push = HEAD

[mergetool]
	keepBackup = true

# https://confusatory.org/post/133141617492/git-diff-for-binary-apple-property-list-files
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"

# https://gist.github.com/Kovrinic/ea5e7123ab5c97d451804ea222ecd78a
[url "https://github.com/"]
	insteadOf = gh:
[url "https://git.code.sf.net/"]
	insteadOf = sf:
[url "https://github.com/"]
	insteadOf = git://github.com/
[url "git@github.com:"]
#	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
