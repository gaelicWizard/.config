# https://confusatory.org/post/133141617492/git-diff-for-binary-apple-property-list-files
[diff "plist"]
	textconv = "plutil -convert xml1 -o -"
[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"
